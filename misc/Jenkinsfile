pipeline {
  agent any
  stages {
    stage('Download dependencies') {
      steps {
        echo 'Download dependencies...'
        bat 'npm install'
      }
    }

    stage('Check linting') {
      steps {
        echo 'Check linting'
      }
    }

    stage('Tests') {
      steps {
        echo 'Test report'
        echo 'Test coverage'
      }
    }

    stage('Build') {
      steps {
        echo 'Build'
        bat 'npm run build'
      }
    }

    stage('Deploy') {
      steps {
        echo 'Deploy'
      }
    }
  }
}
